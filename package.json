{
	"name": "opencode-flow",
	"version": "0.1.0",
	"description": "A TypeScript CLI tool that orchestrates sequential OpenCode agent pipelines for automated feature implementation",
	"type": "module",
	"bin": {
		"ocf": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"start": "node dist/index.js",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/",
		"prepare": "husky"
	},
	"keywords": [
		"opencode",
		"cli",
		"automation",
		"pipeline",
		"linear"
	],
	"author": "Michael Faisst <michael@faisst.io>",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"yaml": "^2.6.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@types/node": "^22.0.0",
		"esbuild-plugin-tsconfig-paths": "1.0.2",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.0",
		"lint-staged": "^15.0.0",
		"prettier": "^3.4.0",
		"tsup": "^8.3.0",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.0.0",
		"vitest": "4.0.16"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yaml,yml}": [
			"prettier --write"
		]
	}
}
